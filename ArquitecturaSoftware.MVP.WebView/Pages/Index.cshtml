@page
@model IndexModel
@{
    ViewData["Title"] = "Nasa Image";
}

<div class="container">
    <div class="text-center">
        <div class="row">
            <div class="col">
                <h3>@Model.InitialMessage</h3>
            </div>
        </div>
        <form method="post" hidden="@Model.LogInFormHidden">

            <div class="row">
                <div class="col">
                    <div class="input-group mb-3">

                        <input type="text" class="form-control" placeholder="Email" name="Mail">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">

                    <button type="submit" class="btn btn-primary" asp-page-handler="LogIn">Validate</button>
                </div>
            </div>
        </form>

        <div class="row p-5">
            <div class="col">
                <form method="post">
                    <button type="submit" class="btn btn-primary" asp-page-handler="GetImage" disabled="@Model.GetImageEnabled">GetImage</button>
                </form>
            </div>
        </div>

        <div class="row p-5">
            <div class="col">

                <img src="@Model.Image" class="img-fluid" alt="Nasa Image">
            </div>
        </div>
    </div>
</div>